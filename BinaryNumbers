#include <stdio.h>
int main() 
{
    int i,j;
    do
    {
    for(i=0;i<=8;i++)
    {
        for(j=0;j<=i+1;j++)
       {
            if((i+j)%2==0)
            {
                printf("0");
            }
            else
            {
                printf("1");
            }
        }
        i++;
        printf("\n");
    }
    }
    while(i<=8);
}
